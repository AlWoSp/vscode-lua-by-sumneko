{
    "version": "2.0.0",
    "type": "shell",
    "windows": {
        "options": {
            "shell": {
                "executable": "C:\\Windows\\System32\\cmd.exe",
                "args": [
                    "/c"
                ]
            }
        }
    },
    "options": {
        "cwd": "${workspaceFolder}"
    },
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "client/tsconfig.json",
            "problemMatcher": [
                "$tsc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "label": "tsc: 构建 - client/tsconfig.json"
        }
    ]
}
